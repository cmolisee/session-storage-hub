{
    "name": "Session-Storage-Hub",
    "description": "Extension to make using session storage better.",
    "private": false,
    "version": "5.9.10",
    "type": "module",
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "release": {
        "branches": [
            "main"
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            [
                "@semantic-release/npm",
                {
                    "npmPublish": false,
                    "pkgRoot": "."
                }
            ],
            "@semantic-release/changelog",
            [
                "@semantic-release/github",
                {
                    "assets": [
                        {
                            "path": "dist/chrome-mv3",
                            "label": "Chrome Extension"
                        },
                        {
                            "path": "dist/firefox-mv2",
                            "label": "Firefox Extension"
                        },
                        {
                            "path": "dist/edge-mv3",
                            "label": "Edge Extension"
                        },
                        {
                            "path": "dist/safari-mv2",
                            "label": "Safari Extension"
                        }
                    ]
                }
            ],
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "CHANGELOG.md",
                        "package-lock.json",
                        "package.json"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    },
    "scripts": {
        "dev": "wxt",
        "dev:firefox": "wxt -b firefox",
        "dev:safari": "wxt -b safari",
        "dev:edge": "wxt -b edge",
        "build": "wxt build",
        "build:firefox": "wxt build -b firefox",
        "build:safari": "wxt build -b safari",
        "build:edge": "wxt build -b edge",
        "zip": "wxt zip",
        "zip:firefox": "wxt zip -b firefox",
        "compile": "tsc --noEmit",
        "postinstall": "wxt prepare",
        "commit": "cz"
    },
    "dependencies": {
        "@ant-design/icons": "^5.5.1",
        "@codemirror/autocomplete": "^6.18.3",
        "@codemirror/commands": "^6.7.1",
        "@codemirror/lang-json": "^6.0.1",
        "@codemirror/language": "^6.10.6",
        "@codemirror/lint": "^6.8.3",
        "@codemirror/search": "^6.5.8",
        "@codemirror/state": "^6.4.1",
        "@codemirror/view": "^6.34.3",
        "@solidjs/router": "^0.15.1",
        "@types/codemirror": "^5.60.15",
        "@uiw/codemirror-theme-andromeda": "^4.23.6",
        "@uiw/codemirror-theme-bespin": "^4.23.6",
        "@uiw/codemirror-theme-github": "^4.23.6",
        "@uiw/codemirror-theme-noctis-lilac": "^4.23.6",
        "@uiw/codemirror-theme-tokyo-night-storm": "^4.23.6",
        "@webext-core/messaging": "^2.1.0",
        "codemirror": "^6.0.1",
        "solid-js": "^1.9.3"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/commit-analyzer": "^13.0.0",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^11.0.1",
        "@semantic-release/npm": "^12.0.1",
        "@semantic-release/release-notes-generator": "^14.0.2",
        "@wxt-dev/module-solid": "^1.1.2",
        "autoprefixer": "^10.4.20",
        "commitizen": "^4.3.1",
        "cz-conventional-changelog": "^3.3.0",
        "postcss": "^8.4.49",
        "semantic-release": "^24.2.0",
        "tailwindcss": "^3.4.15",
        "typescript": "^5.6.3",
        "wxt": "^0.19.13"
    }
}
