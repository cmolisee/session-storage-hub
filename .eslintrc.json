{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "arrow-body-style": ["error", "always"],
        "curly": ["error", "all"],
        "default-case": ["error", { "commentPattern": "^no\\sdefault" }],
        "eqeqeq": ["error", "always"],
        "no-nested-ternary": "error",
        "one-var": ["error", "never"],
        "prefer-const": [
            "error",
            {
                "destructuring": "any",
                "ignoreReadBeforeAssign": false
            }
        ],
        "array-bracket-newline": [
            "error",
            { "multiline": true, "minItems": 4 }
        ],
        "array-bracket-spacing": ["error", "always"],
        "arrow-parens": ["error", "always"],
        "block-spacing": ["error", "always"],
        "arrow-spacing": ["error", { "before": true, "after": true }],
        "comma-dangle": [
            "error",
            {
                "arrays": "always",
                "objects": "always",
                "imports": "never",
                "exports": "never",
                "functions": "never"
            }
        ],
        "quotes": ["error", "single"]
    }
}
